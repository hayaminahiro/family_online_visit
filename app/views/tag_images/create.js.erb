<!--モーダルを閉じる-->
$("div").removeClass("is-active");

<!--コントローラから受け取ったフラッシュの種類によってフラッシュ表示を出し分ける-->
<% if notice.present? %>
  $("#added-message").html("<div class='notification is-success has-text-weight-bold'><p class='notice'><%= notice %></p></div>").hide().fadeIn(100);
<% else %>
  $("#added-message").html("<div class='notification is-danger has-text-weight-bold'><p class='alert'><%= alert %></p></div>").hide().fadeIn(100);
<% end %>

<!--フラッシュ表示を12000ms表示し続け、1200msの速さでfadeOut（非表示）する-->
$(function(){
  setTimeout("$('#added-message').fadeOut(1200)", 12000)
})
