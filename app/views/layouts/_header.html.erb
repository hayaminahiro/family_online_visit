  <div id="navbarBasicExample" class="navbar-menu">
    <div class="navbar-end">
      <div class="navbar-start has-text-weight-bold" style="font-size: 22px;">
        <!--全ユーザー閲覧可能-->
        <p class="navbar-item">
          <%= link_to_unless_current "トップ", root_path, class: "links" %>
