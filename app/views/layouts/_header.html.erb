            </p>

          <% end %>

          <% unless current_facility.facility_admin == true %>
            <!--全ユーザー閲覧可能-->
            <p class="navbar-item">
              <%= link_to_unless_current "お問い合わせ", "#", class: "links" %>
            </p>
          <% end %>

          <% if facility_signed_in? && current_facility.admin== false && current_facility.facility_admin == false %>
            <!--管理者のみ閲覧可能-->
            <p class="navbar-item">
              <%= link_to_unless_current "お知らせ", facility_informations_path(facility_id: current_facility), class: "links" %>
            </p>
          <% end %>

          <% if facility_signed_in? && current_facility.admin? %>
            <!--システム全体管理者のみ閲覧可能-->
            <p class="navbar-item">
              <%= link_to_unless_current "システム利用施設一覧", facilities_path, class: "links" %>
            </p>
          <% end %>

        <% end %>

      </div>

      <% if user_signed_in?  || facility_signed_in? %>
      <div class="navbar-item has-dropdown is-hoverable">
        <a class="navbar-link has-text-weight-bold more">
          <i class="fas fa-user-circle fa-2x"></i>
        </a>
        <div class="navbar-dropdown">
          <a class="navbar-item has-text-weight-bold is-size-6">
            <% if user_signed_in? %>
            <%= link_to "マイページ", user_path(current_user), class: "navbar-item has-text-weight-bold is-size-6" %>
            <% elsif facility_signed_in? %>
            <%= link_to "マイページ", facility_path(current_facility), class: "navbar-item has-text-weight-bold is-size-6" %>
            <% end %>
          </a>
          <a class="navbar-item has-text-weight-bold is-size-6">
            <% if user_signed_in? %>
            <%= link_to "設定", edit_user_registration_path(resource_name), class: "navbar-item has-text-weight-bold is-size-6" %>
            <% elsif facility_signed_in? %>
            <%= link_to "設定", edit_facility_registration_path(resource_name), class: "navbar-item has-text-weight-bold is-size-6" %>
            <% end %>
          </a>
          <hr class="navbar-divider">
          <%= link_to "ログアウト", sign_out_path, class: "navbar-item has-text-weight-bold is-size-6" %>
