<!--タグ新規作成ボタンを表示しているhtml⇨ <div class="tag-plus-btn">（user/show.html.erb）を削除-->
$("div.tag-plus-btn").remove();

<!--作成した@tag.idを持つ<li>要素を<li>の並びの一番最後の列に追加する-->
$('.user-show-tags').append("<li class='tag-link-<%= @tag.id%>' id='tag-links'><div class='tag-panel'><a class='tag-title-branch-ajax' data-remote='true' href='/tags/<%= @tag.id%>'><%= @tag.title %></a><a data-confirm='<%= @tag.title %>のフォルダを削除してよろしいですか？' class='tag-delete-btn' data-remote='true' rel='nofollow' data-method='delete' href='/tags/<%= @tag.id%>'><i class='fas fa-times'></i></a></div></li>");

<!--タグ新規作成ボタンを表示しているhtml⇨ <div class="tag-plus-btn"> を新たに作成された<li>要素の後ろに追加する-->
$('.user-show-tags').append("<div class='tag-plus-btn'><a class='new-folder-btn' data-remote='true' href='/tags/new'><i class='fas fa-folder-plus fa-3x'></i></a></div>");

<!--_all_images.html.erbのモーダル表示（各画像）される画面において、フォルダ選択フォームのリストに、新たに作成した@tagのデータを持つ選択リストを追加する-->
$('.select-tag').append("<option value='<%= @tag.id%>'><%= @tag.title %></option>");

<!--モーダルを閉じる-->
$("div.modal").removeClass("is-active");

<!--コントローラから受け取ったフラッシュの値を元にフラッシュ表示させる-->
$("#added-message").html("<div class='notification is-success has-text-weight-bold'><p class='notice'><%= notice %></p></div>").hide().fadeIn(100);

<!--フラッシュ表示を12000ms表示し続け、1200msの速さでfadeOut（非表示）する-->
$(function(){
  setTimeout("$('#added-message').fadeOut(1200)", 12000)
})
