<body class="image-layout">
  <section class="hero is-light login-hero-size" >
    <div class="container">
      <article class="media">
        <div class="media-content">
          <div class="content has-text-centered">
            <div class="login-title">
              <strong class="new-title">ログイン</strong>
            </div>            
          </div>
            <div class="button-position">
              <div class="columns is-centered">
                <div class="column is-6 top-btn-position">
                
                  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                    <div class="field">
                      <%= f.label :email, class: "label" %><br />
                      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input is-medium is-info input-top", :size=>"100px" %>
                    </div>
                  
                    <div class="field">
                      <%= f.label :password, class: "label" %><br />
                      <%= f.password_field :password, autocomplete: "current-password", class: "input is-medium is-info input-top" %>
                    </div>
                  
                    <% if devise_mapping.rememberable? %>
                      <div class="field">
                        <%= f.check_box :remember_me %>
                        <%= f.label :remember_me %>
                      </div>
                    <% end %>
                  
                    <div class="actions">
                      <%= f.submit "ログイン", class: "button is-info is-medium is-fullwidth new-btn" %>
                    </div><br>
                  <% end %>
                  <div class="to-new-userpage">
                    <%= render "users/shared/links" %>
                  </div>
                
                </div>
              </div>
            </div>
        </div>
      </article>
      <div class="columns is-centered">
        <div class="column">
        <%= link_to "LINE Login", user_line_omniauth_authorize_path %>
        </div>
      </div>
    </div>
  </section>
</body>


<script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>

<script>
    $(document).ready(function() {
        $("#open").on("click", function() {
            $("div.modal").addClass("is-active");
        })

        $("#close, div.modal-background").on("click", function() {
            $("div.modal").removeClass("is-active");
        })
    });
</script>



