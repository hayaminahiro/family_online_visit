<h1>テスト<h1>

<%= form_with model: @user, url: user_update_facilities_used_path(@user), local: true do |f| %>
  <div class="field"> <!--施設テーブルとの関連付けのため追加-->
    <%= f.collection_check_boxes :facility_ids, @facilities, :id, :facility_name, include_hidden: false do |b| %><br />
      <%=  b.label { b.check_box + b.text } %>
    <% end %>
  </div>
  <div class="actions">
    <%= f.submit "更新", class: "button is-link is-medium is-fullwidth new-btn has-text-weight-bold" %>
  </div>
<% end %>

