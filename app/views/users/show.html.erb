<section class="hero is-small">
  <div class="hero-body">
  </div>
</section>

<section class="hero is-info is-bold">
  <div class="hero-body">
    <div class="container has-text-centered">
      <h1 class="title has-text-centered is-size-1">
        <%= @user.name %> 様/ マイページ
      </h1>
    </div>
  </div>
</section>

<div class="container section">
  <div id="WebDev" class="content-tab">
    <div class="table-container">
      <table class="table is-fullwidth is-hoverable is-striped is-narrow" id="family-table">
        <thead>
          <tr>
            <th>施設名</th>
            <th>メールアドレス</th>
            <th>登録ユーザー数</th>
            <th>編集</th>
            <th>削除</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td class="is-vcentered">
              <div class="has-text-weight-semibold is-size-5">
                <%= @user.name %>
              </div>
            </td>
            <td class="is-vcentered">
              <div class="has-text-weight-semibold is-size-5">
                <%= @user.email %>
              </div>
            </td>
            <td class="is-vcentered">
              <div class="has-text-weight-semibold is-size-5">
                <%#= @user.users.count %>
              </div>
            </td>
            <td class="is-vcentered">
              <%= link_to edit_user_registration_path(@user), class: "button is-success is-medium" do %>
              <span><i class="fas fa-user-edit"></i></span>
              <% end %>
            </td>
            <td class="is-vcentered">
              <%= link_to user_path(@user), method: :delete, data: { confirm: "「#{@user.name}」を削除してよろしいですか?" },
                class: "button is-danger is-medium" do %>
              <span><i class="far fa-trash-alt"></i></span>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
