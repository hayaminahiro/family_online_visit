document.querySelector(".js-contents--content-form").innerHTML = "<%= escape_javascript(render partial: 'rooms/modal_contents', locals: { content: @room, obj: @user }) %>";
document.querySelector(".modal").classList.add("is-active");

$(".js-content-form--close-button, div.modal-background").on("click", function() {
  $("div.modal").removeClass("is-active");
})
