<% if content.id.present? %>
  <%= form_with(model: content, url:  user_room_path(obj, content), method: :patch, remote: true) do |f| %>
    <%= render "form", { f: f, content: content } %>
  <% end %>
<% else %>
  <%= form_with(model: content, url: user_rooms_path(obj), method: :post, remote: true) do |f| %>
    <%= render "form", { f: f, content: content } %>
  <% end %>
<% end %>
