<nav class="panel" id="panel-style">
  <div class="notification">
    <div class="content has-text-centered">
      <div class="columns is-centered">
        <div class="column is-10 top-btn-position is-centered">
          <h1 class="account-title" style="color: #401c00;">思い出アルバムの新規投稿ができます。</h1>
          <small style="float: right">現在時刻 <%= l(Time.zone.now, format: :short) %></small>
          <h1 class="mini-title" style="font-size: 20px; color: #401c00;">思い出アルバムの画像選定</h1>
          <p class="title-description">ここから思い出アルバムに使用する画像を最大８枚まで選定できます。</p>
          <%= form_with(model: @memory, url: facility_resident_memories_path(current_facility, @resident), method: :post, local: true) do |f| %>
            <%= render partial: 'shared/error_messages', locals: { obj: @memory } %>
            <div class="label-space">
              <%#= information_image(@information) %>
            </div>

            <% if @memory.images[0].present? %>
              <%= image_tag @memory.images[0].url, id: :img_prev_0, :size => '300x300' %>
            <% else %>
              <%= image_tag "", id: :img_prev_0, :size => '300x300' %>
            <% end %>

            <% if @memory.images[1].present? %>
              <%= image_tag @memory.images[1].url, id: :img_prev_1, :size => '300x300' %>
            <% else %>
              <%= image_tag "", id: :img_prev_1, :size => '300x300' %>
            <% end %>

            <% if @memory.images[2].present? %>
              <%= image_tag @memory.images[2].url, id: :img_prev_2, :size => '300x300' %>
            <% else %>
              <%= image_tag "", id: :img_prev_2, :size => '300x300' %>
            <% end %>

            <% if @memory.images[3].present? %>
              <%= image_tag @memory.images[3].url, id: :img_prev_3, :size => '300x300' %>
            <% else %>
              <%= image_tag "", id: :img_prev_3, :size => '300x300' %>
            <% end %>

            <%= f.check_box :remove_images, id: "img_delete" %>

            <div class="drop-zone-area">
              <%#= f.label :images, "\uf574", class: "fa image_input_comment" %>
              <%= f.file_field :images, multiple: true, value: "upload", class: "image_uploading_0" %>
              <%= f.file_field :images, multiple: true, value: "upload", class: "image_uploading_1" %>
              <%= f.file_field :images, multiple: true, value: "upload", class: "image_uploading_2" %>
              <%= f.file_field :images, multiple: true, value: "upload", class: "image_uploading_3" %>
              <%#= f.hidden_field :memory, :images, multiple: true, value: @memory.identifier %>


            </div>

            <% if @memory.images[0].present? %>
              <%= f.hidden_field :images, multiple: true, value: @memory.images[0].identifier %>
            <% end %>

            <% if @memory.images[1].present? %>
              <%= f.hidden_field :images, multiple: true, value: @memory.images[1].identifier %>
            <% end %>

            <% if @memory.images[2].present? %>
              <%= f.hidden_field :images, multiple: true, value: @memory.images[2].identifier %>
            <% end %>

            <% if @memory.images[3].present? %>
              <%= f.hidden_field :images, multiple: true, value: @memory.images[3].identifier %>
            <% end %>

            <div class="position-control"><h1>位置調整</h1></div>
            <label class="media-left has-text-weight-bold">
              <h1 class="mini-title" style="font-size: 20px; color: #401c00;">出来事の日付（行事日等）</h1>
            </label>
            <div class="media-content">
              <div class="content label-space">
                <%= f.date_field :event_date, class: "fa input" %>
              </div>
            </div>
            <label class="media-left has-text-weight-bold">
              <h1 class="mini-title" style="font-size: 20px; color: #401c00;">思い出画像タイトル</h1>
            </label>
            <div class="media-content">
              <div class="content label-space">
                <%= f.text_field :title, :placeholder => "\uf303 タイトルを入力してください", class: "fa input" %>
              </div>
            </div>
            <label class="media-left has-text-weight-bold">
              <h1 class="mini-title" style="font-size: 20px; color: #401c00;">ご家族へのメッセージ</h1>
            </label>
            <div class="media-content">
              <div class="content label-space">
                <%= f.text_area :message, :placeholder => "\uf303 メッセージを入力してください", class: "fa input", style: "height: 100px;" %>
              </div>
            </div>
            <%= f.submit "思い出アルバムを新規投稿する", class: "info-btn" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</nav>

<script>
  for ( let i=0; i<8; i++ ){
    $(function() {
      function readURL(input) {
        if (input.files && input.files[0]) {
          var reader = new FileReader();
          reader.onload = function (e) {
            $(`#img_prev_${i}`).attr('src', e.target.result);
          }
          reader.readAsDataURL(input.files[0]);
        }
      }
      $(`.image_uploading_${i}`).change(function(){
          readURL(this);
      });
    });
  }
</script>