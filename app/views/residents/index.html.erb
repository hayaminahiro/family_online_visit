<h1 class="resident-title">入居者一覧</h1>

<%= will_paginate @collection, renderer: BulmaPagination::Rails, class: "is-centered is-rounded" %>
<div class="resident-head-button">
  <div class="head-button"><button type="button" class="button is-success" style="border-radius: 100px; font-weight: bold; font-size: 18px;" id="">CSVインポート</button></div>
  <div class="head-button"><button type="button" class="button is-info" style="border-radius: 100px; font-weight: bold; font-size: 18px;" id="new">入居者新規登録</button></div>
</div>

<div class="table-container">
  <table class="table is-bordered is-fullwidth" id="table-residents">
    <thead>
      <tr>
        <th colspan="4">現在利用中</th>
      </tr>
    </thead>
    <tbody>
      <tr class="tr-head">
        <td style="width: 50%;">入居者名</td>
        <td style="width: 25%;">ご家族名</td>
        <td style="width: 25%;"></td>
      </tr>
      <% @residents.each do |resident| %>
      <tr>
        <td><%= resident.name %></td>
        <td><%#= resident.users %></td>
        <td>
          <button type="button" class="button is-success is-medium" id="<%= resident.id %>"><i class="fas fa-user-edit"></i></button>
          <button type="button" class="button is-warning is-medium" id=""><i class="fas fa-luggage-cart"></i></button>
          <%= link_to resident, method: :delete,
                data: { confirm: "削除してよろしいですか？" }, class:"button is-danger is-medium" do %>
            <i class="far fa-trash-alt"></i>
          <% end %>
          <%= render 'edit', {resident: resident, resident_id: resident.name} %>
        </td>
      </tr>
      <% end %>
    <tbody>
  </table>
</div>
<%= will_paginate @collection, renderer: BulmaPagination::Rails, class: "is-centered is-rounded" %>

<%= render 'new' %>
