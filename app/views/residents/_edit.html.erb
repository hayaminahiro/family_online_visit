<div class="modal" id=<%= resident_id %> >
  <div class="modal-background"></div>
  <div class="modal-card">
    <header class="modal-card-head">
        <p class="modal-card-title">入居者情報編集</p>
        <button class="delete" aria-label="close" id="close"></button>
    </header>
    <section class="modal-card-body">
      <div class="form-group col-sm-5">
        <%= form_with(model: resident, url: resident_path(resident), method: :patch, local: true) do |f| %>
        <div class="form-group col-sm-5">
          <%= f.text_field :name, class: "input" %>
          <%= f.text_field :floor, class: "input" %>
          <%= f.text_field :charge_worker, class: "input" %>
          <div style= "text-align: right;"><%= f.submit "編集",class:"button is-info is-outlined" %></div>
        </div>
        <% end %>
      </div>
    </section>
  </div>
</div>

<script>
    $(document).ready(function() {
        $("#<%= resident.id %>").on("click", function() {
            $("div#<%= resident_id %>").addClass("is-active");
        })

        $("#close, div.modal-background").on("click", function() {
            $("div#<%= resident_id %>").removeClass("is-active");
        })
    });
</script>
