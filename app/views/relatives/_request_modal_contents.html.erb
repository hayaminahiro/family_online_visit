<div class="modal" id="<%= approval %>" >
  <div class="modal-background"></div>
  <div class="modal-card" style="width: 1500px;">
    <header class="modal-card-head" style="background-color: #48D1CC;">
      <p class="modal-card-title is-half has-text-weight-bold reserve-modal is-size-4"><%= others.user.name %>様の申請一覧</p>
      <button class="delete" aria-label="close" id="close"></button>
    </header>
    <section class="modal-card-body">
      <div class="form-group col-sm-5">

      <div style="display: flex;
    border-bottom: solid 2px gray;
    padding-bottom: 10px;
    text-align: center;">
        <p style="width:10%;">日付</p>
        <p style="width:15%;">承認/否認</p>
        <p style="width:30%;">入居者名</p>
        <p style="width:15%;">電話番号</p>
        <p style="width:30%;">住所</p>
      </div>

      <% others.user.request_residents.order(id: :desc).each do |request| %>
        <div style="display: flex;
      border-bottom: solid 1px #cecece;
      text-align: center;
      min-height: 35px;
    line-height: 35px;">
          <span style="width:10%;"><%= l(request.created_at, format: :dot) %></span>
          <span style="width:15%;"><%= request.status %></span>
          <span style="width:30%;"><%= simple_format(request.req_name) %></span>
          <span style="width:15%;"><%= simple_format(request.req_phone) %></span>
          <span style="width:30%;"><%= simple_format(request.req_address) %></span><br>
        </div>
      <% end %>

      </div><br>
      <div class="has-text-centered">
        <button type="button" class="button is-black is-outlined is-small is-rounded has-text-weight-semibold" aria-label="close" id="close">
        閉じる
        </button>
      </div>
    </section>
  </div>
</div>

<script>
  $(document).ready(function() {
    $("#<%= others.user.name %>").on("click", function() {
      $("div#<%= approval %>").addClass("is-active");
    })

    $("#close, div.modal-background").on("click", function() {
      $("div#<%= approval %>").removeClass("is-active");
    })
  });
</script>
