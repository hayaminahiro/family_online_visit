<header class="modal-card-head has-background-info">
  <p class="modal-card-title has-text-centered has-text-weight-bold has-text-white"><i class="fa fa-envelope-open" aria-hidden="true"></i>&nbsp;お問い合わせ詳細</p>
</header>
<section class="modal-card-body has-background-info-light">
  <div class="detail-inquiry-content">
    <div class="detail-inquiry has-text-weight-bold">名前</div>
    <div class="detail-inquiry-value"><%= @inquiry.name %></div>
    <div class="detail-inquiry has-text-weight-bold">メールアドレス</div>
    <div class="detail-inquiry-value"><%= @inquiry.email %></div>
    <div class="detail-inquiry has-text-weight-bold">内容</div>
    <div class="detail-inquiry-message"><%= simple_format(@inquiry.message) %></div>
  </div>
</section>
<footer class="modal-card-foot">
  <div class="inquiry-delete-btn">
    <%= link_to "削除", facility_inquiry_path(current_facility, @inquiry.id), method: :delete,
      data: { confirm: "削除してよろしいですか？" },
      class: "button is-danger is-rounded is-medium" %>
    <button type="button" class="button is-black is-outlined is-medium is-rounded has-text-weight-semibold js-content-form--close-button" aria-label="close" id="close">
        キャンセル
    </button>
  </div>
</footer>
