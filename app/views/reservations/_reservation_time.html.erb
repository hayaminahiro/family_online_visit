        <i class="far fa-clock"></i>&nbsp;11:00
      <% end %>
    <% end %>

    <% if @reservations.facility(@facility).time_1130(@date).length < 1 && @calendar_settings.facility(@facility).first.cancellation_time.exclude?("11:30 ~ 12:00") %>
