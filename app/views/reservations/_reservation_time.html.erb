        <i class="far fa-clock"></i>&nbsp;10:30
      <% end %>
    <% end %>

    <% if @reservations.facility(@facility).time_1100(@date).length < 1 && @calendar_settings.facility(@facility).first.cancellation_time.exclude?("11:00 ~ 11:30") %>
