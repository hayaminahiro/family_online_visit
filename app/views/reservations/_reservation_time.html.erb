        <i class="far fa-clock"></i>&nbsp;11:30
      <% end %>
    <% end %>

    <% if @reservations.facility(@facility).time_1400(@date).length < 1 && @calendar_settings.facility(@facility).first.cancellation_time.exclude?("14:00 ~ 14:30") %>
