<% if current_facility.present? %>
  <h1 class="list-title">&nbsp;&nbsp;本日の予約</h1>
<% elsif %>
  <h1 class="list-title">予約情報一覧</h1>
<% end %>

<% @reservations.each do |reservation| %>
  <% if reservation.present? %>
    <% if current_user.present? %>
      <% if reservation.facility_id == @facility.id && current_user.name == reservation.reservation_user %>
        <div class="reservation-list">
          <span>予約情報 |</span>
          <%= link_to "#{l(reservation.reservation_date, format: :long)}~", facility_reservation_path(@facility, reservation), style:"color: #401c00;" %>
        </div>
      <% end %>
    <% elsif current_facility.present? %>
      <% if (reservation.facility_id == @facility.id) && (Date.today == reservation.reservation_date) %>
        <div class="reservation-list">
          <%= link_to "#{reservation.reservation_user} / #{l(reservation.reservation_date, format: :base)}#{l(reservation.started_at, format: :time)}~", facility_reservation_path(@facility, reservation, user: reservation.user_id), style:"color: #401c00;" %>
        </div>
      <% end %>
    <% end %>
  <% end %>
<% end %>
