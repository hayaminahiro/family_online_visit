<h1>登録済み申請一覧</h1>
<table class="table is-striped is-hoverable is-fullwidth" id="req-index-table">
  <thead>
    <tr>
      <th>申請日</th>
      <th>申請者</th>
      <th>入居者</th>
      <th>電話番号</th>
      <th>住所</th>
    </tr>
  </thead>
  <tbody>
  <% @request_residents.each do |request_resident| %>
  <% @request_user = User.find(request_resident.user_id) %>
    <tr>
      <td><%= request_resident.created_at %></td>
      <td><%= @request_user.name %></td>
      <td><%= request_resident.req_name %></td>
      <td><%= request_resident.req_phone %></td>
      <td><%= request_resident.req_address %></td>
    </tr>
  <% end %>
  <tbody>
</table>
