<h1 class="">お知らせ編集モーダル</h1>
<%= form_with(model: @information, url: information_path, method: :patch, local: true) do |f| %>
	<div class="">
		<div class="form-group col-sm-5">
			<% @information.errors.full_messages.each do |message| %>
        <div class="form-error">= message</div>
			<% end %>

      <%= f.text_field :title, class: "input" %>
			<%= f.text_field :news, class: "textarea" %>
			<%= f.submit "編集",class:"button is-info is-outlined" %>
		</div>
	</div>
<% end %>
