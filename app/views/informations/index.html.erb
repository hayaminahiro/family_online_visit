<h1 class="information-title">お知らせ投稿</h1>

<%= will_paginate @collection, renderer: BulmaPagination::Rails, class: "is-centered is-rounded" %>
<div class="new-info-btn"><button type="button" class="button is-info" style="border-radius: 100px; font-weight: bold; font-size: 18px;" id="new">新規お知らせ投稿</button></div>
<div class="table-container">
  <table class="table is-bordered is-fullwidth" id="table-informations">
    <thead>
      <tr>
        <th style="width: 20%;">投稿日時</th>
        <th style="width: 25%;">タイトル</th>
        <th style="width: 35%;">投稿内容</th>
        <th style="width: 20%;">編集／削除</th>
      </tr>
    </thead>
    <tbody>
      <tr class="tr-head">
        <td class="text-color" colspan="4">トップお知らせ</td>
      </tr>
      <tr>
        <td><%= l(@info_top.created_at, format: :default_info) %></td>
        <td><%= @info_top.title %></td>
        <td><%= @info_top.news %></td>
        <td>
          <button type="button" class="button is-success is-medium" id="edit"><i class="fas fa-edit"></i></button>
        </td>
      </tr>
      <tr class="tr-head">
        <td class="text-color" colspan="4">お知らせ</td>
      </tr>
      <% @informations.each do |information| %>
      <tr>
        <td><%= l(information.created_at, format: :default_info) %></td>
        <td><%= information.title %></td>
        <td><%= information.news %></td>
        <td>
          <button type="button" class="button is-success is-medium" id=<%= information.id %>><i class="fas fa-edit"></i></button>
          <%= link_to information, method: :delete,
                data: { confirm: "削除してよろしいですか？" }, class:"button is-danger is-medium" do %>
            <i class="far fa-trash-alt"></i>
          <% end %>
          <%= render "notice_edit", {information: information, information_id: information.title} %>
        </td>
      </tr>
      <% end %>
    <tbody>
  </table>
</div>
<%= will_paginate @collection, renderer: BulmaPagination::Rails, class: "is-centered is-rounded" %>

<%= render 'new' %>
<%= render 'edit' , { information: @info_top } %>
