<ul class="image-layout">
</ul>
<div class="container is-fluid">
  <div class="content has-text-centered">
    <div class="signup-title-facility">
      <strong class="new-title">管理者ユーザー新規登録</strong>
    </div>
  </div>
  <div class="button-position">
    <div class="columns is-centered">
      <div class="column is-4-desktop is-12-mobile top-btn-position">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "facilities/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.label :facility_name, "登録施設名", class: "label" %><br />
            <%= f.text_field :facility_name, :placeholder => "\uf304 登録施設名を入力", autofocus: true, class: "fa input is-medium input-top", :size=>"100px" %>
          </div>

          <div class="field">
            <%= f.label :email, class: "label" %><br />
            <%= f.email_field :email, :placeholder => "\uf0e0 メールアドレスを入力", class: "fa input is-medium input-top" %>
          </div>

          <div class="field">
            <%= f.label :password, class: "label" %><br />
            <%= f.password_field :password, :placeholder => "\uf13e パスワードを入力", class: "fa input is-medium input-top" %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation, "パスワード再確認", class: "label" %><br />
            <%= f.password_field :password_confirmation, :placeholder => "\uf13e パスワードを再入力", class: "fa input is-medium input-top" %>
          </div>

          <div class="actions">
            <%= f.submit "新規登録", class: "button is-link is-medium is-fullwidth new-btn has-text-weight-bold" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="columns is-centered">
    <div class="column">
    </div>
  </div>
</div>
