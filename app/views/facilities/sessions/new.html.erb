<ul class="image-layout">
</ul>
<div class="container is-fluid">
  <div class="content has-text-centered">
    <div class="login-title">
      <strong class="new-title">管理者ログイン</strong>
    </div>
  </div>
  <div class="button-position">
    <div class="columns is-centered">
      <div class="column is-4-desktop is-8-tablet is-12-mobile top-btn-position">

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email, class: "label" %><br />
          <%= f.email_field :email, :placeholder => "\uf0e0 メールアドレスを入力", autofocus: true, autocomplete: "email", class: "fa input is-medium is-info input-top" %>
        </div>

        <div class="field">
          <%= f.label :password, class: "label" %><br />
          <%= f.password_field :password, :placeholder => "\uf13e パスワードを入力", autocomplete: "current-password", class: "fa input is-medium is-info input-top" %>
        </div>

        <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン", class: "button is-success is-medium is-fullwidth has-text-weight-bold new-btn" %>
        </div>
        <% end %>
        <div class="to-new-userpage">
          <%#= render "facilities/shared/links" %>
          <%= link_to "新規アカウント登録", new_registration_path(resource_name), class: 'button is-link is-focused is-medium is-fullwidth has-text-weight-bold account-link' %>
        </div>
      </div>
    </div>
  </div>
  <div class="columns is-centered">
    <div class="column">
    </div>
  </div>
</div>