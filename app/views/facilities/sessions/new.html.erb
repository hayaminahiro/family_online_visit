<ul class="image-layout">
</ul>
<section class="hero login-hero-size">
  <div class="container">
    <article class="media">
      <div class="media-content">
        <div class="content has-text-centered">
          <div class="login-title">
            <strong class="new-title">管理者ログイン</strong>
          </div>
        </div>
        <div class="button-position">
          <div class="columns is-centered">
            <div class="column is-6 top-btn-position">

              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="field">
                  <%= f.label :email, class: "label" %><br />
                  <%= f.email_field :email, :placeholder => "\uf0e0 メールアドレスを入力してください", autofocus: true, autocomplete: "email", class: "fa input is-medium is-info input-top", :size=>"100px" %>
                </div>

                <div class="field">
                  <%= f.label :password, class: "label" %><br />
                  <%= f.password_field :password, :placeholder => "\uf13e パスワードを入力してください", autocomplete: "current-password", class: "fa input is-medium is-info input-top" %>
                </div>

                <% if devise_mapping.rememberable? %>
                  <div class="field">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                  </div>
                <% end %>

                <div class="actions">
                  <%= f.submit "ログイン", class: "button is-success is-medium is-fullwidth has-text-weight-bold new-btn" %>
                </div><br>
              <% end %>
              <div class="to-new-userpage">
                <%= render "facilities/shared/links" %>
              </div>

            </div>
          </div>
        </div>
      </div>
    </article>
    <div class="columns is-centered">
      <div class="column">
      </div>
    </div>
  </div>
</section>
